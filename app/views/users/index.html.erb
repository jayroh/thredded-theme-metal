<% content_for :page_id do %>users<% end %>
<% content_for :page_title do %><%= site.title %> | Users<% end %>

<h1>Users</h1>

<table cellpadding="0" cellspacing="0" border="0" id="users">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Messageboards</th>
    <th>&nbsp;</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.roles.count %></td>
      <td><%= link_to 'edit', edit_user_path(user) %></td>
    </tr>
  <% end %>
</table>
