<%= form_for(@user, :validate => true, :as => :user, :url => create_setup_path(:step => step || '1'), :method => :post) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name, "Username" %>
  <%= f.text_field :name %></p>

  <p><%= f.label :email %>
  <%= f.text_field :email %></p>

  <p><%= f.label :password %>
   <%= f.password_field :password %></p>
        
  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Continue" %></p>
<% end %>
